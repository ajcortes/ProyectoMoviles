<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttons_ghibli">
        <item name="android:fontFamily">@font/ghibli_bold</item>
        <item name="android:layout_marginTop">@dimen/fragment_vertical_margin</item>
        <item name="android:backgroundTint">#027A04</item>
    </style>

    <style name="title_details">
        <item name="android:layout_marginStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/fragment_horizontal_margin</item>
        <item name="android:fontFamily">@font/ghibli_bold</item>
        <item name="android:textColor">#4AACB6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_ghibli">
        <item name="android:layout_marginStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:fontFamily">@font/ghibli</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#0568BA</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>